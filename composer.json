{
    "name": "odinizfilho/kori",
    "type": "project",
    "description": "Um novo framework para quem deseja simplicidade.",
    "keywords": ["kori", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "doctrine/orm": "^2.16",
        "filp/whoops": "^2.15",
        "guzzlehttp/guzzle": "^7.2",
        "nikic/fast-route": "^1.3",
        "odinizfilho/kori-views": "dev-master",
        "symfony/http-foundation": "^6.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"

    },
    "autoload": {
        "psr-4": {
            "Kori\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "make-controller": [
            "php kori controller"
        ],
        "make-preact": [
            "php kori component-preact"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
